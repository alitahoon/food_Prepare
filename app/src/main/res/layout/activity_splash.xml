<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.splash"
    android:gravity="center">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/img01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/index01"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/slide_index" />

        <ImageView
            android:id="@+id/index02"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/slide_index_not_selected" />

        <ImageView
            android:id="@+id/index03"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/slide_index_not_selected" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select a food"
        android:textColor="#19456B"
        android:textSize="18sp"
        android:textStyle="bold"
         />

    <TextView
        android:layout_marginVertical="10dp"
        android:id="@+id/slide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:gravity="center"
        android:text="@string/slide_text01"
        android:textColor="#11698E"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/btn_continue_splash_style"
        android:letterSpacing="0.1"
        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gravitas_one"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="Go Food"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>