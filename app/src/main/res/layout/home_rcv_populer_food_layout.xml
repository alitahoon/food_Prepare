<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        android:layout_marginHorizontal="5dp"
        >
        <LinearLayout
            android:id="@+id/rcv_pop_food_item_text"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:id="@+id/rcv_pop_food_item_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pizza"
                android:layout_gravity="center"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rcv_pop_food_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Mushrooms"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginVertical="3dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rcv_pop_food_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/rcv_item_text_color"
                android:text="$12.0"
                android:gravity="center"
                android:textSize="14sp" />

            <ImageView
                android:padding="3dp"
                android:id="@+id/btn_buy_food"
                android:layout_gravity="right"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:background="@color/firstColor"
                android:src="@drawable/add"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>