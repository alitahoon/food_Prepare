<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.details"
    android:background="@color/firstColor"
    >
    <androidx.cardview.widget.CardView
        android:layout_weight="0.1"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.utils.widget.ImageFilterButton
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pizza00"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/firstColor"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/details_fragment_background">
        <TextView
            android:letterSpacing="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_title"
            android:text="Title"
            android:fontFamily="@font/days_one"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/TextColor"
            android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_instructions"
                android:text="@string/slide_text01"
                android:fontFamily="@font/days_one"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:textColor="@color/rcv_item_text_details_color"
                android:layout_marginBottom="5dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_ExtendedIngredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>