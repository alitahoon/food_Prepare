<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:id="@+id/recipe_content_cardView"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rcipe_image"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/pizza00" />

            <TextView
                android:maxLength="15"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_title"
                android:text="vegetables"
                android:letterSpacing="0.2"
                android:textColor="@color/TextColor"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:maxLines="1"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcipe_instructions"
                android:textColor="@color/rcv_item_text_details_color"
                android:text="Vegetables are parts of plants that are consumed by humans Read More..."
                android:gravity="center"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rcipe_instructions"
                android:layout_marginBottom="-34dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/rcipe_aggregateLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:drawablePadding="2dp"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_baseline_favorite_24"
                    android:src="@drawable/ic_baseline_favorite_24" />
                <TextView
                    android:paddingHorizontal="20dp"
                    android:layout_weight="1"
                    android:id="@+id/rcipe_preparationMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:drawablePadding="2dp"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_baseline_access_time_filled_24"
                    android:src="@drawable/ic_baseline_favorite_24" />
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/rcipe_healthScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:drawablePadding="2dp"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_baseline_score_24"
                    android:src="@drawable/ic_baseline_favorite_24" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continue"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/btn_continue_splash_style"
                android:letterSpacing="0.1"
                android:text="Read.."
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>